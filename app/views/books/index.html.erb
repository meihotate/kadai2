<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
		<thead>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</thead>

		<body>
			<% @books.each do |book| %>
				<tr>
				<td nowrap><%= book.title %></td>
				<td nowrap><%= book.body %></td>
				<td nowrap><%= link_to 'Show', book_path(book) %></td>
				<td nowrap><%= link_to 'Edit', edit_book_path(book) %></td>
				<td nowrap><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
				</tr>
			<% end %>
		</body>
	</table>


<h2>New Book</h2>
<!-- form_forメソッド -->
<%= form_for(@booksnew) do |f| %>
	<p class="index">Title</p>
	<%= f.text_field :title %>
	<p class="index">Body</p>
	<%= f.text_area :body %>
	<div class="new">
	<%= f.submit 'Create Book' %>
	</div>
<% end %>



